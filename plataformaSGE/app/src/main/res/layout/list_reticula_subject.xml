<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card:cardElevation="8dp"
    android:id="@+id/root_layout">

    <LinearLayout
        android:id="@+id/listSubjectBackground"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:layout_margin="10dp"
        android:padding="18dp"
        android:background="@color/matAcreditada">

        <TextView
            android:id="@+id/listSubjectName"
            android:textColor="@color/white"
            android:text="Nombre de la materia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/listSubjectScore"
            android:text="calif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="19dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/listSubjectBtnSelectSubject"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="Seleccionar"
            android:visibility="invisible"
            card:cornerRadius="25dp"
            android:layout_gravity="center_horizontal"
            android:textSize="10dp"
            android:backgroundTint="#505050"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>