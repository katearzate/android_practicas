<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KardexFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_marginTop="25dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Boleta de Calificaciones"
            android:textSize="22dp"
            android:textStyle="bold"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#777777"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"/>

        <Spinner
            android:id="@+id/kardexSpinnerNoSemestre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/numSemestres"
            android:layout_margin="20dp"
            android:gravity="center"
            android:textSize="23dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <TextView
                android:textColor="@color/black"
                android:text="Materia"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:paddingLeft="30dp"
                android:textSize="15dp"
                android:textStyle="bold"/>

            <TextView
                android:text="CrÃ©ditos"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <TextView
                android:text="Calif."
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                android:textStyle="bold"/>
        </LinearLayout>

        <ListView
            android:id="@+id/kardexListGrades"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@layout/list_grades"/>
    </LinearLayout>

</FrameLayout>