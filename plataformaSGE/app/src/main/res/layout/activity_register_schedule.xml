<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".RegisterScheduleActivity">

    <TextView
        android:id="@+id/registerNote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NOTA: Puede que no hayas elegido tus materias para registrar tu horario."
        android:textAlignment="center"
        android:padding="18dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/registerBtnEnter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/registerBtnEnter"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:cornerRadius="25dp"
        android:text="Registrar horario"
        app:layout_constraintTop_toTopOf="@+id/registerNote"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/registerBtnOmit"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:cornerRadius="25dp"
        android:text="Omitir"
        app:layout_constraintTop_toTopOf="@+id/registerBtnEnter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>