<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Iniciar sesión"
        android:textStyle="bold"
        android:textSize="25dp"
        android:textAlignment="center"
        android:layout_margin="@dimen/margenes" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_margin="@dimen/margenes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/editUsr"
            android:hint="Usuario"
            android:background="#00ffffff"
            android:drawableEnd="@android:drawable/ic_dialog_email"
            android:layout_margin="@dimen/margenes"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_margin="@dimen/margenes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/editPass"
            android:hint="Contraseña"
            android:background="#00ffffff"
            android:drawableEnd="@android:drawable/ic_lock_idle_lock"
            android:layout_margin="@dimen/margenes"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/btnRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margenes"
        android:text="¿No tienes cuenta? Registrate"
        app:icon="@android:drawable/ic_menu_add"/>

    <Switch
        android:id="@+id/switchRemember"
        android:text="Recordarme"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/btnAccess"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margenes"
        android:text="Acceder"
        android:textColor="@color/white"
        android:gravity="center"
        app:backgroundTint="@color/button"
        app:icon="@android:drawable/ic_lock_idle_charging"
        app:iconTint="@color/white"/>

</LinearLayout>